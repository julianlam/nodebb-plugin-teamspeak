{
    "id": "nodebb-plugin-teamspeak",
    "name": "NodeBB Teamspeak plugin",
    "description": "This plugin allows for a widget to be created which shows the channels and clients in a Teamspeak server. It also allows for web-based administration of the server.",
    "url": "https://github.com/pitaj/nodebb-plugin-teamspeak",
    "library": "./library.js",
    "staticDirs": {
        "images": "public/images"
    },
    "hooks": [
        { "hook": "filter:widgets.getWidgets", "method": "defineWidget" },
        { "hook": "filter:widget.render:teamspeak", "method": "renderTSwidget" },
        { "hook": "filter:admin.header.build", "method": "addAdminNavigation"},
        { "hook": "static:app.load", "method": "init"}
    ],
    "css": [
    	"public/style.css"
    ],
    "templates": "public/templates"
}
